#include<iostream>
#include<vector>
using namespace std;

int main(){
    int t;
    cin>>t;

    while(t--){
        int n;
        cin>>n;

        vector<long long> arr;
        for(int i = 0; i<n; i++){
            long long a;
            cin>>a;
            arr.push_back(a);
        }

        long long sum = 0, maxi = -1, count = 0;

        for(int i = 0; i<n; i++){
            if(i == 0 && arr[i] == 0){
                count++;
                continue;
            }

            sum += arr[i];
            maxi = max(maxi, arr[i]);
            if(sum - maxi == maxi)  count++;
        } 

        cout<<count<<endl;
    }
}
